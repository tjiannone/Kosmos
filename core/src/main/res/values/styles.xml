<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Shadowsocks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/material_primary_500</item>
        <item name="colorPrimaryDark">@color/material_primary_800</item>
        <item name="colorAccent">@color/material_accent_200</item>
    </style>

    <style name="Theme.Shadowsocks.Translucent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorPrimary">@color/material_primary_500</item>
        <item name="android:colorPrimaryDark">@color/material_primary_800</item>
        <item name="android:colorAccent">@color/material_accent_200</item>
    </style>

    <style name="Theme.Shadowsocks.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/material_primary_500</item>
        <item name="colorPrimaryDark">@color/material_primary_800</item>
        <item name="colorAccent">@color/material_accent_200</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
</resources>
